digraph HighRiskCluster {
    // Graph settings
    graph [rankdir=LR, splines=true, overlap=false];
    node [style=filled, fontname="Arial", fontsize=10];
    edge [arrowsize=0.8];
    
    // Central node - Customer
    C [label="C\n(Customer)", shape=box, fillcolor="lightblue", color="blue", penwidth=2.0];
    
    // High-risk nodes - Defaulted
    D1 [label="D1", fillcolor="lightcoral", color="red", penwidth=1.5];
    D2 [label="D2", fillcolor="lightcoral", color="red", penwidth=1.5];
    D3 [label="D3", fillcolor="lightcoral", color="red", penwidth=1.5];
    D4 [label="D4", fillcolor="lightcoral", color="red", penwidth=1.5];
    D5 [label="D5", fillcolor="lightcoral", color="red", penwidth=1.5];
    D6 [label="D6", fillcolor="lightcoral", color="red", penwidth=1.5];
    D7 [label="D7", fillcolor="lightcoral", color="red", penwidth=1.5];
    D8 [label="D8", fillcolor="lightcoral", color="red", penwidth=1.5];
    
    // Safe nodes
    S1 [label="S1", fillcolor="lightgray"];
    S2 [label="S2", fillcolor="lightgray"];
    S3 [label="S3", fillcolor="lightgray"];
    S4 [label="S4", fillcolor="lightgray"];
    S5 [label="S5", fillcolor="lightgray"];
    S6 [label="S6", fillcolor="lightgray"];
    S7 [label="S7", fillcolor="lightgray"];
    S8 [label="S8", fillcolor="lightgray"];
    S9 [label="S9", fillcolor="lightgray"];
    S10 [label="S10", fillcolor="lightgray"];
    S11 [label="S11", fillcolor="lightgray"];
    S12 [label="S12", fillcolor="lightgray"];
    S13 [label="S13", fillcolor="lightgray"];
    S14 [label="S14", fillcolor="lightgray"];
    S15 [label="S15", fillcolor="lightgray"];
    
    // === HIGH-RISK EDGES (BOLD & RED) ===
    C -> D1 [penwidth=3.0, color=red, label="RISK"];
    S1 -> D3 [penwidth=3.0, color=red, label="RISK"];
    S2 -> D5 [penwidth=3.0, color=red, label="RISK"];
    D2 -> D8 [penwidth=3.0, color=red, label="RISK"];
    
    // === STANDARD EDGES ===
    // 1-hop from C
    C -> S1;
    C -> S2;
    C -> D2;
    
    // 2-hop connections
    S1 -> S3;
    S1 -> S4;
    
    S2 -> S5;
    S2 -> S6;
    
    D1 -> S7;
    D1 -> S8;
    
    D2 -> S9;
    
    // 3-hop connections
    S3 -> S10;
    S3 -> S11;
    
    S4 -> D4;
    
    S5 -> S12;
    
    S6 -> S13;
    S6 -> D6;
    
    S7 -> S14;
    
    S8 -> D7;
    
    S9 -> S15;
    
    // Additional cross-connections for density
    S10 -> D4;
    S12 -> D6;
    S14 -> D7;
}
